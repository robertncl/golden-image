# GitHub Container Registry Configuration
GHCR_REGISTRY=ghcr.io
GHCR_NAMESPACE=your-github-username
GHCR_USERNAME=your-github-username
GHCR_PASSWORD=your-github-token

# Image Tags
BASE_IMAGE_TAG=latest
PLATFORM_IMAGE_TAG=latest

# Build Configuration
BUILD_PLATFORMS=linux/amd64,linux/arm64
BUILD_CACHE=true
BUILD_PUSH=true

# Security Scanning
SCAN_IMAGES=true
TRIVY_ENABLED=true
PRISMA_ENABLED=true

# Registry Settings
REGISTRY_TYPE=ghcr
PRIMARY_REGISTRY=ghcr
SYNC_TO_ACR=true 