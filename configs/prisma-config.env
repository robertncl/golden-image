# Prisma Cloud Configuration
# Prisma Cloud (formerly Twistlock) security scanning settings

# Prisma Cloud Console Configuration
PRISMA_CONSOLE_URL=https://your-prisma-console.com
PRISMA_ACCESS_KEY=your-access-key
PRISMA_SECRET_KEY=your-secret-key

# Scanning Configuration
SCAN_SEVERITY=high,critical
COMPLIANCE_PROFILE=CIS-1.0
OUTPUT_FORMAT=json
REPORTS_DIR=reports/prisma

# Advanced Scanning Options
SCAN_TIMEOUT=300
SCAN_THREADS=4
INCLUDE_PACKAGES=true
INCLUDE_FILES=true

# Compliance Profiles Available
# CIS-1.0 - CIS Container Security Benchmark
# HIPAA - Health Insurance Portability and Accountability Act
# PCI - Payment Card Industry Data Security Standard
# SOX - Sarbanes-Oxley Act
# NIST - National Institute of Standards and Technology

# Severity Levels
# low - Low severity vulnerabilities
# medium - Medium severity vulnerabilities  
# high - High severity vulnerabilities
# critical - Critical severity vulnerabilities

# Output Formats
# json - JSON format (recommended for parsing)
# table - Table format (human readable)
# csv - CSV format (for spreadsheets)
# sarif - SARIF format (for GitHub Security)

# Scan Types
SCAN_VULNERABILITIES=true
SCAN_COMPLIANCE=true
SCAN_SECRETS=true
SCAN_MALWARE=true

# Reporting Configuration
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
GENERATE_SARIF_REPORT=true
UPLOAD_TO_PRISMA=true

# Integration Settings
SLACK_WEBHOOK_URL=
EMAIL_RECIPIENTS=
JIRA_PROJECT_KEY=
JIRA_URL=

# Thresholds for Failures
MAX_CRITICAL_VULNERABILITIES=0
MAX_HIGH_VULNERABILITIES=5
MAX_COMPLIANCE_VIOLATIONS=10

# Notification Settings
NOTIFY_ON_CRITICAL=true
NOTIFY_ON_HIGH=true
NOTIFY_ON_COMPLIANCE_VIOLATIONS=true 