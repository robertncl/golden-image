# RedHat UBI 8 LTS Base Image
FROM registry.access.redhat.com/ubi8/ubi-minimal:latest

# Set build arguments
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION

# Set labels
LABEL maintainer="Golden Image Build System" \
      org.opencontainers.image.created="${BUILD_DATE}" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.revision="${VCS_REF}" \
      org.opencontainers.image.vendor="Golden Image Build System" \
      org.opencontainers.image.title="RedHat UBI 8 LTS Base" \
      org.opencontainers.image.description="RedHat UBI 8 LTS base image" \
      org.opencontainers.image.source="https://github.com/your-org/golden-image" \
      org.opencontainers.image.licenses="MIT"

# Install essential packages
RUN dnf update -y && \
    dnf install -y \
    ca-certificates \
    curl \
    dumb-init \
    gosu \
    tini && \
    dnf clean all

# Create non-root user
RUN groupadd -g 1000 appuser && \
    useradd -m -s /bin/bash -u 1000 -g appuser appuser

# Set working directory
WORKDIR /app

# Switch to non-root user
USER appuser

# Use dumb-init as entrypoint
ENTRYPOINT ["/usr/bin/dumb-init", "--"]

# Default command
CMD ["/bin/bash"] 