# Alpine Linux 3.18 LTS Base Image
FROM alpine:3.18

# Set build arguments
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION

# Set labels
LABEL maintainer="Golden Image Build System" \
      org.opencontainers.image.created="${BUILD_DATE}" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.revision="${VCS_REF}" \
      org.opencontainers.image.vendor="Golden Image Build System" \
      org.opencontainers.image.title="Alpine Linux 3.18 LTS Base" \
      org.opencontainers.image.description="Alpine Linux 3.18 LTS base image" \
      org.opencontainers.image.source="https://github.com/your-org/golden-image" \
      org.opencontainers.image.licenses="MIT"

# Install essential packages
RUN apk update && apk upgrade --no-cache && \
    apk add --no-cache \
    ca-certificates \
    curl \
    dumb-init \
    su-exec \
    tini

# Create non-root user
RUN addgroup -g 1000 appuser && \
    adduser -D -s /bin/sh -u 1000 -G appuser appuser

# Set working directory
WORKDIR /app

# Switch to non-root user
USER appuser

# Use dumb-init as entrypoint
ENTRYPOINT ["/usr/bin/dumb-init", "--"]

# Default command
CMD ["/bin/sh"] 